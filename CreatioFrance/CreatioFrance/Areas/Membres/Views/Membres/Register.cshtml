@model CreatioFrance.Areas.Membres.Models.MembersViewModel

@{
    ViewBag.Title = "Inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inscription</h2>

@using (Html.BeginForm("Register", "Membres", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Inscrivez vous en membre de Creatio-France.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @RenderPage("~/Views/Partial/Account/RegisterInfoPartialView.cshtml")
    @RenderPage("~/Views/Partial/Account/UsersInfoPartialView.cshtml")
}