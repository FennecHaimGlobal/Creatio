@model CreatioFrance.Areas.Users.Models.UsersViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @RenderPage("~/Views/Partial/Account/RegisterInfoPartialView.cshtml")
    @RenderPage("~/Views/Partial/Account/UsersInfoPartialView.cshtml")
}