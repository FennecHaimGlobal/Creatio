@model CreatioFrance.Models.CallbackViewModel

<ul class="nav navbar-nav navbar-right">
    <li>
        @using (Html.BeginForm("SaveCallback", "Callback", FormMethod.Post, new { id = "callbackForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <input type="submit" class="btn btn-default" value="Rappelez moi" />
                </div>
            </div>
        }
    </li>
</ul>


