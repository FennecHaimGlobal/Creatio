@model CreatioFrance.Models.CallbackViewModel

<ul class="nav navbar-nav navbar-right">
    <li>
        <style type="text/css">
            .monbutton {
                background-color: transparent;
                text-decoration: none;
                border: none;
                float: right;
                color: white;
                cursor: pointer;
                margin-left: 40px;
            }

            .montextbox {
                color: black;
            }
            .monlabel{
                    float: left;
            }
        </style>
        @using (Html.BeginForm("SaveCallback", "Callback", FormMethod.Post, new { id = "callbackForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group" style="color:white">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "monlabel" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "montextbox" })
                </div>
                <div class="col-md-2">
                    <input type="submit" class="monbutton" value="Rappelez moi" style="" />
                </div>
            </div>
        }
    </li>
</ul>


