@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Bonjour " + User.Identity.GetUserName() + "!", "Index", "Manage", new { Area = "" }, htmlAttributes: new { title = "Manage" })
        </li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Incription membres
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Inscription des Avocats", "Register", "Account", new { Area = "Avocats" }, htmlAttributes: null)</li>
                <li>@Html.ActionLink("Inscription des Commerciaux", "Register", "Account", new { Area = "Commerciaux" }, htmlAttributes: null)</li>
            </ul>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Deconnection</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Inscription", "Register", "Membres", new { Area = "Membres" }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Connection", "Login", "Account", new { Area = "" }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

